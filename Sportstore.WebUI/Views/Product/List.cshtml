@model Sportstore.WebUI.Models.ProductsListViewModel

@{
    ViewBag.Title = "Products";
}

<h2>List</h2>
@foreach (var p in Model.Products)
    {
<div class="well">
    <h3>
        <strong>@p.Name</strong>
        <span class="pull-right label label-primary">@p.Price.ToString("c")</span>
    </h3>
    <span class="lead"> @p.Description</span>
</div>
    }
<div class="btn-group pull-right">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("List", new { page = x }))
</div>
